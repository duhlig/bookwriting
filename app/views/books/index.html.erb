<h2>Listing books</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Abstract</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <% if book.user_id == @@currentUser %>
        <td><%= book.title %></td>
        <td><%= truncate book.abstract, length: 80 %></td>
        <!--<td><%# book.text %></td> -->
        <td><%= book.user_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   <% end %>
   </tr>
<% end %>

</table>

