<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <div class="alert alert-error"><%= devise_error_messages! %></div>

    <div><%= f.label :name %>
      <br/>
      <%= f.text_field :name, :autofocus => true, :required => true, :class => "input-block-level" %></div>

    <div><%= f.label :email %>
      <br/>
      <%= f.email_field :email, :required => true, :class => "input-block-level" %></div>

    <div><%= f.label :password %>
      <br/>
      <%= f.password_field :password, :required => true, :class => "input-block-level" %></div>

    <div><%= f.label :password_confirmation %>
      <br/>
      <%= f.password_field :password_confirmation, :required => true, :class => "input-block-level" %></div>

    <div><%= f.submit "Sign up", :class => "btn btn-large btn-block btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
