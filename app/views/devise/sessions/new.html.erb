<div class="form-container">
<div class="login">
    <h2><%= image_tag "checkin_icon.jpg" %><span style="padding-left: 10px">Sign in</span></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <p><%= f.label :email %>
      <br/>
      <%= f.email_field :email, :autofocus => true, class:"form-control input-block-level", :required => true %></p>

    <p class="spez"><%= f.label :password %>
      <br/>
      <%= f.password_field :password, class:"form-control input-block-level", :required => true%></p>

      <p  class="checkbox">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
    </p>

    <p class="submit"><%= f.submit "Sign in", class: "btn btn-large btn-primary btn-block" %></p>

</div>
<% end %>
  <div class="login-help">
    <p><%= render "devise/shared/links" %>  </p>
  </div>
</div>

