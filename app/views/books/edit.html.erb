<ol class="breadcrumb">
  <li><%= link_to 'Home ', root_path %></li>
  <li class="active">/ Edit</li>
</ol>
<div class="fltrt">
  <button type="button" class="btn btn-info"><%= link_to 'Show Book', @book %></button>
</div><div class="clearfloat"></div>
<h2>Editing book</h2>
<h3>Authors</h3>
<div class="version">
  <ul>
  <% @book.authorships.each do |a| %>
      <li><%= link_to_unless a.user == current_user, "revoke access", revoke_access_path(a), :method => :post %> | <%= "#{a.user.name} (#{a.user.email})" %></li>
  <% end %>
  </ul>
</div>
<div>
<% if @book.versions.length > 0 %>
    <h3>Previous Versions</h3>
    <div class="version">
    <ul>
      <% @book.versions.each do |v| %>
          <li><%= v.created_at %> | <%= User.find(v.whodunnit.to_i).name %> | <%= link_to "revert", revert_version_path(v), :method => :post %></li>
      <% end %>
    </ul></div>
<% end %>
</div><div class="clearfloat"></div>
<br/>
<div><%= render 'form' %></div>
