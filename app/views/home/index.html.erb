<div class="section"><h2><%= image_tag "book_icon.jpg" %><span style="padding-left: 10px">Your Books</span></h2></div>
<button type="button" class="btn btn-success fltrt"><i class="icon-plus icon-white" ></i> <%= link_to 'New Book', new_book_path %></button><br>
<div style="padding-top: 30px; min-height: 150px"><table style="text-align: left; width: 100%" class="table-bordered table-hover">
  <thead><tr>
    <th>Title</th>
    <th>Authors</th>
    <th>Version</th>
    <th>Updated</th>
    <th>Actions</th>
  </tr></thead>
  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= render 'books/author_gravatar', :authors => book.authors, :max_authors => 3 %></td>
        <td><%= book.versions.length + 1 %></td>
        <td><%= "#{time_ago_in_words(book.updated_at)} ago" %></td>
        <td class="rt-book">
            <button type="button" class="btn btn-info"><i class="icon-book icon-white" ></i> <%= link_to 'Show', book %></button>
            <button type="button" class="btn btn-primary"><i class="icon-pencil icon-white" ></i> <%= link_to 'Edit', edit_book_path(book) %> </button>
            <% if book.users.length > 1 %>
              <button type="button" class="btn btn-warning"><i class="icon-remove icon-white" ></i> <%= link_to 'Leave', revoke_access_path(book.user_authorship(current_user)), :method => :post, :class => "delete" %></button>
            <% else %>
            <button type="button" class="btn btn-danger"><i class="icon-trash icon-white" ></i> <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "delete" %></button>
            <% end %>
			<button type="button" class="btn btn-warning" id="pdf_link"><i class="icon-file icon-white" ></i> <%= link_to "PDF", book_path(book, :format => "pdf") %></button>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
