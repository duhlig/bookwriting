<ol class="breadcrumb">
  <li class="active"><%= link_to 'Home ', root_path %></li>
  <li class="active">/ Edit User</li>
</ol><br>
<%= devise_error_messages! %>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
<div class="row-fluid">
    <div class="span8">
        <div><%= f.label :name %>
        <%= f.text_field :name, :autofocus => true, :required => true, :class => "input-block-level" %></div>

	    <div><%= f.label :email %>
	    <%= f.email_field :email, :required => true, :class => "input-block-level" %></div>

	    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
	    <% end %>

	    <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
	    <%= f.password_field :password, :autocomplete => "off", :class => "input-block-level" %></div>

	    <div><%= f.label :password_confirmation %>
	    <%= f.password_field :password_confirmation, :class => "input-block-level" %></div>

	    <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
	    <%= f.password_field :current_password, :class => "input-block-level" %></div>
    </div>

	<div class="span4">Avatar <i>(change at <%= link_to "gravatar.com", "http://gravatar.com" %>)</i><br/>
	<%= render 'shared/avatar', :size => 300, :name => current_user.name, :hash => User.find(current_user.id).gravatar_hash(current_user.id) %>
	</div>
</div>
<div class="field"><%= f.submit "Update", :class => "btn btn-info btn-large btn-block"%></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => {:confirm => "Are you sure?"},:class => "btn btn-danger btn-large btn-block", :method => :delete %></p>

<%= link_to "Back", root_path, :class => 'btn btn-success btn-large btn-block' %><br>
