<div><%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :original_updated_at # updated_at time value, from the db, at the time when this form is displayed
  %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :abstract %><br />
    <%= f.cktext_area :abstract, :ckeditor => { :toolbar => "bookAbstract" } %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.cktext_area :text, :ckeditor => { :toolbar => "bookContent" } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
